<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    style="@style/Linear"
    tools:context="ru.matthewhadzhiev.rssreader.ui.MainActivity">



    <ImageView
        android:id="@+id/feed_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/open_news_feed"
        android:src="@mipmap/feed"
        android:layout_weight="1"
        android:scaleType="centerCrop"
    />

    <ImageView
        android:id="@+id/channels_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/open_channels_menu_for_add_or_delete_channels"
        android:src="@mipmap/channels_fhoto"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/image_view_margin_top"
    />

    <ImageView
        android:id="@+id/settings_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/open_app_settings"
        android:src="@mipmap/settings_p"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/image_view_margin_top"
    />
</LinearLayout>