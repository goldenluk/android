<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/read_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Linear"
                tools:context="ru.matthewhadzhiev.rssreader.ui.MainActivity">

    <Button
        android:id="@+id/read_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/add_new_channel_button"
        android:layout_alignParentRight="true"
        style="@style/Button"
    />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_toStartOf="@id/read_button"
        android:hint="@string/name_for_field_for_input_channel_address"
        android:layout_toLeftOf="@id/read_button"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <EditText
            android:id="@+id/rss_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textWebEmailAddress"/>

    </android.support.design.widget.TextInputLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignTop="@+id/text_input_layout"
        android:layout_centerHorizontal="true" android:layout_marginTop="176dp"
        android:id="@+id/result_text_view"/>
    <TextView
        android:text="@string/give_the_example_for_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@+id/read_button"
        android:layout_centerHorizontal="true" android:id="@+id/example_text_view"/>
    <TextView
        android:text="@string/text_view_with_channel_example"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_below="@+id/example_text_view"
        android:id="@+id/last_or_example" android:layout_alignRight="@+id/read_button"
        android:layout_alignEnd="@+id/read_button"/>
</RelativeLayout>