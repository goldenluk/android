<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.matthewhadzhiev.rssreader">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service android:name="ru.matthewhadzhiev.rssreader.network.FetchRssItemsService" />
        <activity android:name="ru.matthewhadzhiev.rssreader.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="ru.matthewhadzhiev.rssreader.ui.FeedNewsActivity"/>
        <activity android:name="ru.matthewhadzhiev.rssreader.ui.AddChannelActivity"/>
        <activity android:name="ru.matthewhadzhiev.rssreader.ui.ChannelsControlActivity"/>
        <activity android:name="ru.matthewhadzhiev.rssreader.ui.ChannelsMenuActivity"/>
    </application>

</manifest>